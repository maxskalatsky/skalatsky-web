    <script>
        function handleSubmit(event) {
            event.preventDefault();
            const email = document.getElementById('emailInput').value;
            
            // Show success message
            const form = event.target;
            form.innerHTML = `
                <div style="padding: 20px; background: rgba(255, 255, 255, 0.2); border-radius: 50px; backdrop-filter: blur(10px);">
                    <p style="font-size: 1.1rem; font-weight: 600;">ðŸŽ‰ You're on the list!</p>
                    <p style="margin-top: 10px; opacity: 0.9;">We'll notify you when Project Alpha launches.</p>
                </div>
            `;
            
            // In production, you would send this to your backend
            console.log('Email submitted:', email);
        }
    </script>
